<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xbox"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:padding="24dp"
        android:text="@string/question_cpu"
        android:textAlignment="center"
        android:textColor="@color/RED" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:orientation="horizontal">

        <Button
            android:id="@+id/true_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#46F316"
            android:text="@string/true_button" />

        <Button
            android:id="@+id/false_button"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170px"
            android:backgroundTint="#FD0202"
            android:text="@string/false_button" />


    </LinearLayout>


    <Button
        android:id="@+id/cheat_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:backgroundTint="#6D46FA"
        android:text="@string/cheat_button" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/prev_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF018786"
            android:text="prev"
            app:icon="@drawable/arrow_left" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:backgroundTint="#FF018786"
            android:text="Next"
            app:icon="@drawable/arrow_right"
            app:iconGravity="end" />

    </LinearLayout>
</LinearLayout>
